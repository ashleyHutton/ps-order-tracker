<p id="notice"><%= notice %></p>

<h1>Listing Order Attachments</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_attachments.each do |order_attachment| %>
      <tr>
        <td><%= order_attachment.order_id %></td>
        <td><%= order_attachment.avatar %></td>
        <td><%= link_to 'Show', order_attachment %></td>
        <td><%= link_to 'Edit', edit_order_attachment_path(order_attachment) %></td>
        <td><%= link_to 'Destroy', order_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

